generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  role      Role     @default(USER)
  clients   Client[]
  projects  Project[]
  reports   Report[]
  createdAt DateTime @default(now())
}

model Client {
  id        Int      @id @default(autoincrement())
  name      String
  contact   String?
  email     String?
  phone     String?
  owner     User?    @relation(fields: [ownerId], references: [id])
  ownerId   Int?
  projects  Project[]
  createdAt DateTime @default(now())
}

model Project {
  id         Int           @id @default(autoincrement())
  name       String
  description String?
  client     Client?       @relation(fields: [clientId], references: [id])
  clientId   Int?
  owner      User?         @relation(fields: [ownerId], references: [id])
  ownerId    Int?
  status     ProjectStatus @default(ACTIVE)
  startedAt  DateTime?
  dueDate    DateTime?
  reports    Report[]
  createdAt  DateTime @default(now())
}

model Report {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  project   Project? @relation(fields: [projectId], references: [id])
  projectId Int?
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int?
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  MANAGER
  USER
}

enum ProjectStatus {
  ACTIVE
  ON_HOLD
  COMPLETED
  CANCELLED
}
